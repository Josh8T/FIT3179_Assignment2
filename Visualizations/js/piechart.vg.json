{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 350,
    "title": {
      "text": "Distribution of Startup Industries",
      "fontSize": 20
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Josh8T/FIT3179/main/unicorn_startup_companies_cleaned.csv"
    },
    "layer": [
      {
        "mark": {
          "type": "arc",
          "tooltip": true,
          "stroke": "#fff",
          "innerRadius":20
        }
      },
      {
        "mark": {
          "type": "text",
          "radiusOffset": 20,
          "fontWeight":"bold",
          "fontSize": 14
        },
        "encoding": {
          "text": {
            "field": "Industry",
            "type": "quantitative",
            "aggregate":"count"
          }
        }
      }
    ],
    "encoding": {
      "theta": {
        "title": "Percentage of Unicorns",
        "field": "Industry",
        "type": "quantitative",
        "aggregate": "count",
        "stack": "normalize"
      },
      "radius": {
        "title": "Number of Unicorns",
        "field": "Industry",
        "aggregate":"count",
        "scale": {
          "type": "sqrt", "zero": true, "rangeMin": 20
        }
      },
      "color": {
        "field": "Industry",
        "type": "nominal",
        "scale": {
          "range":[
            "#C55FFC",
            "#EFDCF9",
            "#747080",
            "#7954A1",
            "#F6D4D2",
            "#4120A9",
            "#A1A9FE"
          ]
        }
      }
    }
  }
  