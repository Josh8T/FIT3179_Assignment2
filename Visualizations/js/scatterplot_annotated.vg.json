{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 600,
  "title": "Unicorn Startups Globally",
  "data": {
    "url": "https://raw.githubusercontent.com/Josh8T/FIT3179/main/unicorn_startup_companies_cleaned.csv"
  },
  "params": [
    {
      "name": "continent_selection",
      "bind":{
        "input": "select",
        "options":[
          null,
          "North America",
          "South America",
          "Europe",
          "Asia",
          "Oceania",
          "Africa"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Asia",
          "Oceania",
          "Africa"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {
      "filter": "continent_selection == null || datum.Continent == continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Valuation ($B)",
      "type": "quantitative",
      "title": "Total Valuation ($B)",
      "aggregate": "sum",
      "axis": {"tickCount": 3},
      "scale": {"type": "log", "domain": [1, 3000]}
    },
    "y": {
      "aggregate":"count",
      "field": "Country",
      "type": "quantitative",
      "title": "Number of Companies",
      "axis": {"tickCount": 3},
      "scale": {"type": "log", "domain": [1, 1000]}
    }
  },
  "layer": [
    {
      "mark": {"type": "circle","size":130},
      "encoding": {

        "color": {
          "field": "Continent",
          "type": "nominal",
          "title": "Continent",
          "scale":{
            "domain":[
              "North America",
              "South America",
              "Europe",
              "Asia",
              "Oceania",
              "Africa"
            ],
            "range":[                
              "#3b6691", 
              "#736ca3", 
              "#ac6ea6", 
              "#da7397", 
              "#fc9783", 
              "#f88380"
            ]
          }
        },
        "opacity":{"value":0.8},
        "tooltip":[
          {"field": "Country", "type": "nominal"},
          {"aggregate": "count", "field": "Country", "type": "quantitative", "title": "Number of Unicorns"},
          {"aggregate": "sum", "field": "Valuation ($B)", "type": "quantitative", "title": "Total Valuation ($B)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic",
        "fontWeight":"bold"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity":{
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'United States of America'|| datum['Country'] =='India'|| datum['Country'] == 'Indonesia'|| datum['Country'] == 'Singapore'",
            "value": 1
          },
          "value": 0
        },
        "tooltip":[
          {"field": "Country", "type": "nominal"},
          {"aggregate": "count", "field": "Country", "type": "quantitative", "title": "Number of Unicorns"},
          {"aggregate": "sum", "field": "Valuation ($B)", "type": "quantitative", "title": "Total Valuation ($B)"}
        ]
      }
    }
  ]
}

